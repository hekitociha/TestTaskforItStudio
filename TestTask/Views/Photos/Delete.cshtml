@model TestTask.Models.Photo

@{
    ViewData["Title"] = "Удалить фото";
}

<h1>Удалить</h1>

<h3>Вы точно хотите удалить фото?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <img src="~/Photos/@Model.ImageSrc"/>
        <dt class = "col-sm-2">
            Скопированно в secondbase
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isCopied)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>