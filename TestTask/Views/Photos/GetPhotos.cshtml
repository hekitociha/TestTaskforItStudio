@model IEnumerable<TestTask.Models.Photo>
@{
    ViewData["Title"] = "Список фото";
}
<h1>Список фото</h1>

<p>
    <a asp-action="Create">Загрузить фото</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uploadTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isCopied)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desription)
            </td>
            <td>
                <img src="@item.ImageSrc" class="rounded-circle" width="40" height="40" >
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.uploadTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isCopied)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Copping" asp-route-id="@item.Id">Сохранить в Secondbase</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>